{
	"name": "extension",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build && next export && yarn prepare",
		"prepare": "mv out/_next out/assets && sed -i 's/\\/_next/\\/assets/g' out/**.html",
		"watch": "npm-watch",
		"start": "next start",
		"lint": "next lint"
	},
	"watch": {
		"build": {
			"patterns": [
				".",
				"styles/**",
				"pages/**",
				"public/**"
			],
			"ignore": [
				"out",
				"node_modules",
				".next"
			],
			"extensions": [
				"js",
				"json",
				"lock",
				"tsx",
				"ts"
			]
		}
	},
	"dependencies": {
		"next": "12.0.7",
		"npm-watch": "^0.11.0",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.1",
		"eslint": "8.6.0",
		"eslint-config-next": "12.0.7",
		"postcss": "^8.4.5",
		"tailwindcss": "^3.0.9"
	}
}
