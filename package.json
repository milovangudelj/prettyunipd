{
	"name": "prettyunipd",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build && next export -o dist && yarn prepare",
		"prepare": "mv dist/_next dist/assets && sed -i 's/\\/_next/\\/assets/g' dist/**.html",
		"watch": "npm-watch build",
		"start": "next start",
		"lint": "next lint"
	},
	"watch": {
		"build": {
			"patterns": [
				".",
				"styles",
				"pages",
				"components",
				"public"
			],
			"ignore": [
				"dist",
				"node_modules",
				".next",
				".git"
			],
			"extensions": [
				"js",
				"jsx",
				"ts",
				"tsx",
				"json",
				"lock",
				"css",
				"html"
			]
		}
	},
	"dependencies": {
		"@heroicons/react": "^1.0.5",
		"next": "12.0.7",
		"react": "17.0.2",
		"react-dom": "17.0.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.1",
		"eslint": "8.6.0",
		"eslint-config-next": "12.0.7",
		"nodemon": "^2.0.15",
		"npm-watch": "^0.11.0",
		"postcss": "^8.4.5",
		"tailwindcss": "^3.0.9"
	}
}
