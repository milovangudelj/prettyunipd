{
	"name": "prettyunipd",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build && next export -o dist && yarn prepare",
		"prepare": "mv dist/_next dist/assets && sed -i 's/\\/_next/\\/assets/g' dist/**.html",
		"watch": "npm-watch build",
		"zip": "ln -s dist PrettyUnipd && zip -r PrettyUnipd.zip PrettyUnipd/* && rm PrettyUnipd",
		"start": "next start",
		"lint": "next lint"
	},
	"watch": {
		"build": {
			"patterns": [
				".",
				"styles",
				"pages",
				"components",
				"public"
			],
			"ignore": [
				"dist",
				"node_modules",
				".next",
				".git"
			],
			"extensions": [
				"js",
				"jsx",
				"ts",
				"tsx",
				"json",
				"lock",
				"css",
				"html"
			]
		}
	},
	"dependencies": {
		"@heroicons/react": "2.2.0",
		"next": "15.2.3",
		"react": "19.0.0",
		"react-dom": "19.0.0"
	},
	"devDependencies": {
		"autoprefixer": "10.4.21",
		"eslint": "9.22.0",
		"eslint-config-next": "15.2.3",
		"nodemon": "3.1.9",
		"npm-watch": "0.13.0",
		"postcss": "8.5.3",
		"tailwindcss": "4.0.15"
	}
}
